# Use pactl to adjust volume in PulseAudio.
set $refresh_i3status killall -SIGUSR1 i3status
bindsym $mod+Prior exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ +10% && $refresh_i3status
bindsym $mod+Next exec --no-startup-id pactl set-sink-volume @DEFAULT_SINK@ -10% && $refresh_i3status
bindsym $mod+Home exec --no-startup-id pactl set-sink-mute @DEFAULT_SINK@ toggle && $refresh_i3status
bindsym $mod+End exec --no-startup-id pactl set-source-mute @DEFAULT_SOURCE@ toggle && $refresh_i3status

bindsym Control+Mod1+Down exec --no-startup-id playerctl play-pause --player=spotify
bindsym Control+Mod1+Up exec --no-startup-id playerctl next --player=spotify
bindsym Control+Mod1+Left exec --no-startup-id playerctl position 10- --player=spotify
bindsym Control+Mod1+Right exec --no-startup-id playerctl position 10+ --player=spotify

bindsym Control+$mod+Down exec --no-startup-id playerctl play-pause --player=vlc
bindsym Control+$mod+Up exec --no-startup-id playerctl next --player=vlc
bindsym Control+$mod+Left exec --no-startup-id playerctl position 10- --player=vlc
bindsym Control+$mod+Right exec --no-startup-id playerctl position 10+ --player=vlc


