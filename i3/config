# Press $mod+o followed by either f, t, Escape or Return to launch firefox,
# thunderbird or return to the default mode, respectively.
set $mode_launcher Launch: [w]Web Browser [f]File Browser [c]Code Editor [t]Terminal
bindsym $mod+space mode "$mode_launcher"

mode "$mode_launcher" {
    bindsym f exec thunar ; mode "default"
    bindsym w exec firefox ; mode "default"
    bindsym c exec code ; mode "default"
    bindsym t exec i3-sensible-terminal ; mode "default"

    bindsym Return mode "default"
    bindsym Escape mode "default"

}

